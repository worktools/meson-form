{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "importsNotUsedAsValues": "preserve",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "types": ["node"],
    "paths": {
      "meson-form": ["../src/form.tsx"]
    },
    "baseUrl": "./example/",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": ["./lib/*"]
}
